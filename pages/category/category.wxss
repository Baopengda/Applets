.centers {
  display: flex;
  background-color: #fff;
}
.centers van-sidebar {
  width: 20%;
}
.centers .rightinfo {
  width: 80%;
  margin: 5rpx;
}
.centers .rightinfo .rightinfo_box {
  position: relative;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 280rpx;
}
.centers .rightinfo .rightinfo_box image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}
.centers .rightinfo .rightinfo_box .rightinfo_text {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.425);
  color: white;
  top: 0;
  left: 0;
  text-align: center;
  line-height: 300rpx;
}
.centers .rightinfo .rightinfo_box .rightinfo_text span {
  margin: 0rpx 20rpx;
}
.centers .rightinfo .rightinfo_center {
  text-align: center;
  color: #000000;
  margin-bottom: 30rpx;
}
.centers .rightinfo .rightinfo_center span {
  margin: 0rpx 20rpx;
  color: rgba(0, 0, 0, 0.527);
}
